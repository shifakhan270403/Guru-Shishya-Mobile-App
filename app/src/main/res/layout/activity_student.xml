<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentActivity"
    android:background="@drawable/gradient_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello There !!!"
            android:fontFamily="@font/alegreya_sc_bold"
            android:textSize="25dp"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Help Us Get To Know You Better!"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/fulname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_person"
            android:fontFamily="sans-serif"
            android:hint="User Name"
            android:padding="10dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_phone"
            android:fontFamily="sans-serif"
            android:hint="Whats App Number"
            android:padding="10dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_books"
            android:fontFamily="sans-serif"
            android:hint="Title â€“ Student or Teacher"
            android:padding="10dp"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_mail"
            android:fontFamily="sans-serif"
            android:hint="Enter your email"
            android:padding="10dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education and  Technical Skills"
            android:textColorHint="@color/white"
            android:background="#30ffffff"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:drawableEnd="@drawable/ic_book"/>

        <EditText
            android:id="@+id/workie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Work experience if any"
            android:textColorHint="@color/white"
            android:background="#30ffffff"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:drawableEnd="@drawable/ic_work"/>

        <EditText
            android:id="@+id/req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_ct"
            android:fontFamily="sans-serif"
            android:hint="Requirements"
            android:padding="10dp"
            android:textColorHint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:text="Select subject you want / take tuition for">

        </TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:id="@+id/rg"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engineering"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
            <RadioButton
                android:id="@+id/ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
            <RadioButton
                android:id="@+id/sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
            <RadioButton
                android:id="@+id/ex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrance Exams"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
            <RadioButton
                android:id="@+id/vx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V to X (All Boards)"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
            <RadioButton
                android:id="@+id/ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arts"
                android:textSize="18sp"
                android:textColor="@color/white">
            </RadioButton>
        </RadioGroup>

        <EditText
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_language"
            android:fontFamily="sans-serif"
            android:hint="Languages"
            android:padding="10dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            android:drawableEnd="@drawable/ic_sentiment"
            android:fontFamily="sans-serif"
            android:hint="About me"
            android:padding="10dp"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:backgroundTint="#EA80FC"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/alegreya_sc_bold"/>


    </LinearLayout>

</ScrollView>